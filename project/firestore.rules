rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Colección de trabajos
    match /jobs/{doc} {
      allow read, write: if true;
    }

    // Colección de herramientas
    match /tools/{doc} {
      allow read, write: if true;
    }

    // Uso de herramientas por trabajo
    match /job_tool_usages/{doc} {
      allow read, write: if true;
    }
  }
}